@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using UserPtoject.Models
@model User

<form asp-action="Update" asp-controller="User" method="post">
    <input type="hidden" asp-route-id=@Model.Id />
    <div>
        <label>Adınız</label>
        <input type="text" asp-for=@Model.Name />
    </div>

    <br />

    <div>
        <label>Soyadınız</label>
        <input type="text" asp-for=@Model.LastName />
    </div>

    <br />

    <div>
        <button>
            Güncelle
        </button>
    </div>

    <div>
        @ViewBag.ErrorMessage
    </div>

</form>